<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/fab_margin"
            android:src="@drawable/call"
            app:backgroundTint="#006a4e"
            android:onClick="call_emergency"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="One tap call to the national emergency number:"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:textSize="25sp"
            android:layout_toLeftOf="@id/fab"
            android:id="@+id/info"/>
    </RelativeLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/favourite"
        android:text="Add Favourites"
        android:padding="5dp"
        android:background="#fff"
        android:textAllCaps="false"
        android:id="@+id/contact_add"
        android:clickable="true"
        android:layout_gravity="center"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add your favourite contacts here to reach them quickly:"
                    android:layout_gravity="center_horizontal"
                    android:textSize="25sp"
                    android:gravity="center"/>
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_view"
                    android:layout_margin="15dp"
                    />
                </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>